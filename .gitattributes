# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Shell scripts
*.sh text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.json text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.bmp binary
*.ico binary
*.pt binary
*.pth binary
*.ckpt binary
*.pkl binary
*.npy binary
*.npz binary
*.so binary
*.dylib binary
*.dll binary
