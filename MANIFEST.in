# Include documentation and license
include README.md
include LICENSE
include INSTALL.md
include CODE_OF_CONDUCT.md
include CONTRIBUTING.md

# Include installation scripts
include install_git_deps.sh
include install.sh

# Include assets if needed (users may need model assets)
recursive-include assets *

# Exclude unnecessary files
exclude .gitignore
exclude .gitmodules
exclude .gitattributes

# Exclude development and build artifacts
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.so
global-exclude .DS_Store
global-exclude *.pt
global-exclude *.ckpt
global-exclude *.pth

# Exclude examples, logs, and outputs
recursive-exclude examples *
recursive-exclude logs *
recursive-exclude checkpoints *
recursive-exclude data *
recursive-exclude debug *
recursive-exclude results *
recursive-exclude sandbox *
recursive-exclude training *
recursive-exclude notebooks *
exclude *.log
exclude demo_out
